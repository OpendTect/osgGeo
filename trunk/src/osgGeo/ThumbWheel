#include <osgGeo/Common>
#include <osg/Node>
#include <osgGA/EventQueue>


namespace osg { class Geode; class NodeVisitor; }

namespace osgGeo
{

/**
 * Wheel for performing rotation
 */

class OSGGEO_EXPORT ThumbWheel : public osg::Node
{
public:
    ThumbWheel();
    ThumbWheel(const ThumbWheel&,const osg::CopyOp&);
    
    void accept(osg::NodeVisitor&);
    osg::BoundingSphere computeBound() const;

protected:
    bool handleEvents( osgGA::EventQueue::Events& );
    ~ThumbWheel();
    osg::Geode* _geode;

};


}

#endif
