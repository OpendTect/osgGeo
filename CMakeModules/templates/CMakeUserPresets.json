{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23
    },
    "configurePresets": [
        {
            "name": "environment",
            "hidden": true,
            "environment": {
                "OSG_VERSION": "3.6.5",
                "VSG_VERSION": "1.1.8"
            }
        },
        {
            "name": "env-win",
            "hidden": true,
            "inherits": [
                "environment"
            ],
            "environment": {
                "DEVTOOLS_DIR": "C:/appman/win64",
                "QT_DIR": "$env{DEVTOOLS_DIR}/qt/Qt/$env{QT_VERSION}/msvc2022_64",
                "NINJA": "$env{DEVTOOLS_DIR}/qt/Qt/Tools/Ninja/ninja.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "env-lux",
            "hidden": true,
            "inherits": [
                "environment"
            ],
            "environment": {
                "DEVTOOLS_DIR": "/auto/users/appman/lux64",
                "QT_DIR": "$env{DEVTOOLS_DIR}/qt/Qt/$env{QT_VERSION}/gcc_64",
                "NINJA": "$env{DEVTOOLS_DIR}/qt/Qt/Tools/Ninja/ninja"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "env-macos",
            "hidden": true,
            "inherits": [
                "environment"
            ],
            "environment": {
                "DEVTOOLS_DIR": "/Users/Shared/dev/mac",
                "QT_DIR": "$env{DEVTOOLS_DIR}/qt/Qt/$env{QT_VERSION}/macos",
                "NINJA": "$env{DEVTOOLS_DIR}/qt/Qt/Tools/Ninja/ninja"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": {
                    "type": "PATH",
                    "value": "${sourceDir}/inst"
                }
            }
        },
        {
            "name": "common-win",
            "hidden": true,
            "inherits": [
                "common",
                "env-win"
            ],
            "cacheVariables": {
		"OSG_ROOT": {
		    "type": "PATH",
		    "value": "$env{DEVTOOLS_DIR}/osg/inst_osg_$env{OSG_VERSION}_vs2022"
		},
		"VSG_ROOT": {
		    "type": "PATH",
		    "value": "$env{DEVTOOLS_DIR}/vsg/inst_vsg_$env{VSG_VERSION}_vs2022"
		}
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "common-lux",
            "hidden": true,
            "inherits": [
                "common",
                "env-lux"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "common-macos",
            "hidden": true,
            "inherits": [
                "common",
                "env-macos"
            ],
            "cacheVariables": {
                "OpendTect_DIR": {
                    "type": "PATH",
                    "value": "$env{OD_INSTALLATION}/OpendTect $env{OD_VERSION}.app"
                },
                "OD_BINARY_BASEDIR": {
                    "type": "PATH",
                    "value": "$env{OD_INSTALLATION}/OpendTect $env{OD_VERSION}.app"
                }
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "msvc17gen",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "architecture": "x64"
        },
        {
            "name": "ninja-mc",
            "hidden": true,
            "description": "Ninja multi-config generator",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "default-msvc",
            "displayName": "Default Windows settings for MSVC",
            "inherits": [
                "common-win",
                "msvc17gen"
            ],
            "condition": {
                "lhs": "${hostSystemName}",
                "rhs": "Windows",
                "type": "equals"
            }
        },
        {
            "name": "default-vscode-win",
            "displayName": "Default Windows settings for VSCODE",
            "inherits": [
                "common-win"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "ninja-msvc-qtcreator",
            "displayName": "Default Windows settings for QtCreator (using MSVC)",
            "inherits": [
                "common-win"
            ],
            "toolset": {
                "value": "v143,host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": "$env{QT_DIR}"
            }
        },
        {
            "name": "default-ninja-win",
            "displayName": "Default Windows settings using Ninja",
            "inherits": [
                "common-win",
                "ninja-mc"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "default-ninja-linux",
            "displayName": "Default Linux settings using Ninja",
            "inherits": [
                "common-lux",
                "ninja-mc"
            ],
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "$env{NINJA}"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "default-ninja-macos",
            "displayName": "Default macOS settings using Ninja",
            "inherits": [
                "common-macos",
                "ninja-mc"
            ],
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "$env{NINJA}"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        }
    ]
}
